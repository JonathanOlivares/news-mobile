<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout_img_notice"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:background="#ccc">

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_title_notice_item"
            android:text="@string/txt_book_title_item"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:layout_toStartOf="@id/ImgBtn_more_option"
            android:layout_toEndOf="@+id/relativeLayout_img_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_description_book_item"
            android:text="@string/txt_description_book_item"
            android:layout_toEndOf="@id/relativeLayout_img_notice"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:lines="5"
            android:layout_below="@id/txt_title_notice_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_date_book_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_toEndOf="@+id/relativeLayout_img_notice"
            android:maxLines="1"
            android:text="@string/txt_date_book_item"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/ImgBtn_more_option"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>





</com.google.android.material.card.MaterialCardView>